{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "gtest build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-fsanitize=address",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lgtest"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "benchmark build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lbenchmark"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "benchmark run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "group": {
                "kind": "none"
            },
            "dependsOn": [
                "benchmark build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}